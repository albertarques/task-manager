{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center h-screen">
        <h1 class="text-4xl font-bold text-gray-800 my-4">
            Create task
        </h1>
        {{ form_start(form, { 'attr': {'class': 'w-1/2 bg-blue-100 p-6 rounded-lg'} }) }}
        {{ form_widget(form) }}
        <div class="flex justify-between mt-4">
            <a href="{{ path('app_task_index') }}" class="btn text-white btn-primary bg-red-500 hover:bg-red-900 px-4 p-2 rounded-full">Cancel</a>
            <button class="btn text-white btn-primary bg-green-500 hover:bg-green-900 px-4 py-2 rounded-full">Save</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
