{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center mx-auto">
        <h1 class="text-4xl font-bold text-gray-800 my-4">
            Edit task
        </h1>
        {{ form_start(form, { 'attr': {'class': 'w-2/5 mb-4 bg-blue-200 p-6 rounded-lg'} }) }}
        {{ form_widget(form) }}
        {% if form.title.vars.errors|length > 0 %}
            <div class="text-red-500 text-sm mt-1">
                {{ form_errors(form.title) }}
            </div>
        {% endif %}

        <div class="flex justify-between mt-4">
            <a href="{{ path('app_task_index') }}" class="btn text-white btn-primary bg-red-500 hover:bg-red-900 px-4 p-2 rounded">Cancel</a>
            <button class="btn text-white btn-primary bg-green-500 hover:bg-green-900 px-4 p-2 rounded">Update</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
