{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center h-screen">
    <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center py-4">Register</h1>

    {{ form_start(registrationForm, { 'attr': {'class': 'p-6 w-1/4'} }) }}

    {{ form_errors(registrationForm) }}

    <div class="mb-4">
        {{ form_label(registrationForm.email, 'Correo electrónico', { 'label_attr': {'class': 'block text-gray-800 mb-2'} }) }}
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'block w-full mt-1 px-4 py-2 border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'} }) }}
    </div>

    <div class="mb-4">
        {{ form_label(registrationForm.plainPassword, 'Contraseña', { 'label_attr': {'class': 'block text-gray-800 mb-2'} }) }}
        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'block w-full mt-1 px-4 py-2 border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'} }) }}
    </div>

    <div class="mb-4">
        {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'flex items-center'} }) }}
    </div>

    <button type="submit" class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg shadow">
        Registrarse
    </button>

    {{ form_end(registrationForm) }}

    <div class="text-center mt-4">
        <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">¿Do you have an account? Login</a>
    </div>
</div>
{% endblock %}
