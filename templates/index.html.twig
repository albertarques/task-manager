{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center justify-center h-screen">
        <h1 class="text-4xl font-bold text-gray-800">
            Welcome to Simple Task Manager!
        </h1>
        {% if user %}
            <h3 class="text-2xl font-bold text-gray-800">
                Hello {{ user.email }}.
            </h3>
            <div class="mt-10">
                <a href="{{ path('app_task_index') }}" class="text-white bg-blue-500 hover:bg-blue-900 font-bold py-2 px-4 rounded mr-4">
                    Task List
                </a>
            </div>
        {% else %}
            <h3 class="text-2xl font-bold text-gray-800">
                Login or register to start manage tasks.
            </h3>
            <div class="mt-10">
                <a href="{{ path('app_login') }}" class="text-black bg-green-500 hover:bg-green-900 text-white font-bold py-2 px-4 rounded mr-4">
                    Login
                </a>
                <a href="{{ path('app_register') }}" class="text-black bg-blue-500 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded">
                    I'm new!
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
